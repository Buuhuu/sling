<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apache.sling</groupId>
        <artifactId>sling</artifactId>
        <version>30</version>
        <relativePath />
    </parent>

    <artifactId>org.apache.sling.jms-leveldb-macosx</artifactId>
    <packaging>bundle</packaging>
    <version>1.0.1-SNAPSHOT</version>

    <name>Apache Sling MoM Implementation using JMS with AMQ - leveldb Support (JNI Binding OSX)</name>
    <description>
        Extends Apache Sling MoM Implementation using JMS with AMQ by adding necessary libraries to use leveldb store of AMQ including
        native binding for macosx.
    </description>

    <scm>
        <connection>scm:svn:http://svn.apache.org/repos/asf/sling/trunk/contrib/commons/mom/jms-leveldb</connection>
        <developerConnection>scm:svn:https://svn.apache.org/repos/asf/sling/trunk/contrib/commons/mom/jms-leveldb</developerConnection>
        <url>http://svn.apache.org/viewvc/sling/trunk/contrib/commons/mom/jms-leveldb</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Fragment-Host>org.apache.sling.jms</Fragment-Host>
                        <Embed-Dependency>
                            leveldbjni-osx;inline=true
                        </Embed-Dependency>
                        <Import-Package>
                            !org.fusesource.leveldbjni,
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.fusesource.leveldbjni</groupId>
            <artifactId>leveldbjni-osx</artifactId>
            <version>1.8</version>
        </dependency>
    </dependencies>
</project>
